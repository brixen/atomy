macro (x = y)
  Atomo::AST::Assign new(x, y);

macro (x match: (b: Block))
  { n = Atomo::AST::Match new(x, b);
    `({ ~n } call)
  } call;

macro ((x: BinarySend) := y)
  Atomo::AST::Define new(
    x operator,
    x lhs,
    [x rhs],
    y
  );

macro ((x: Variable) := y)
  Atomo::AST::Define new(
    x name,
    'self,
    [],
    y
  );

macro (x := y)
  Atomo::AST::Define new(
    x method_name,
    x receiver,
    x arguments,
    y
  )