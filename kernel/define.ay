macro(do(&b)): b body

macro(x = y):
  Assign new(x line, x, y)

macro(x =! y):
  Set new(x line, x, y)

macro(x := y):
  where = Atomy::Namespace define-target
  Atomy::Namespace register(x namespace-symbol, where)

  Atomy::CodeLoader when-load <<
    [`(Atomy::Namespace register(~(x namespace-symbol), ~where)), true]

  Atomy::CodeLoader when-run <<
    [`(Atomy::Namespace register(~(x namespace-symbol), ~where)), true]

  Define new(x line, x, y)

macro(define(x, &y)):
  `(~x := ~(y block-body))

macro(x **= y): `(~x =! (~x ** ~y))
macro(x *= y): `(~x =! (~x * ~y))
macro(x <<= y): `(~x =! (~x << ~y))
macro(x >>= y): `(~x =! (~x >> ~y))
macro(x &&= y): `(~x =! (~x && ~y))
macro(x &= y): `(~x =! (~x & ~y))
macro(x ||= y): `(~x =! (~x || ~y))
macro(x |= y): `(~x =! (~x | ~y))
macro(x += y): `(~x =! (~x + ~y))
macro(x -= y): `(~x =! (~x - ~y))
macro(x /= y): `(~x =! (~x / ~y))
macro(x ^= y): `(~x =! (~x ^ ~y))
macro(x %= y): `(~x =! (~x % ~y))

macro(x match(&b)):
  Match new(line, x, b)

macro(class(name, &body)):
  Class new(name line, name, body block-body)

macro(class(`(<< ~obj), &body)):
  SingletonClass new(obj line, obj, body block-body)

macro(class(`(~name < ~sup), &body)):
  Class new(name line, name, body block-body, sup)

macro(module(name, &body)):
  Module new(name line, name, body block-body)

macro(evaluate-when('compile, &x)):
  x body evaluate
  'nil

macro(evaluate-when('load, &x)):
  Atomy::CodeLoader when-load << [x block-body, false]
  'nil

macro(evaluate-when('run, &x)):
  Atomy::CodeLoader when-run << [x block-body, false]
  'nil

macro(evaluate-when('compile, 'load, &x)):
  x body evaluate
  Atomy::CodeLoader when-load << [x block-body, true]
  'nil

macro(evaluate-when('compile, 'run, &x)):
  x body evaluate
  Atomy::CodeLoader when-run << [x block-body, true]
  'nil

macro(evaluate-when('load, 'compile, &x)):
  x body evaluate
  Atomy::CodeLoader when-load << [x block-body, true]
  'nil

macro(evaluate-when('load, 'run, &x)):
  Atomy::CodeLoader when-load << [x block-body, false]
  Atomy::CodeLoader when-run << [x block-body, false]
  'nil

macro(evaluate-when('run, 'load, &x)):
  Atomy::CodeLoader when-load << [x block-body, false]
  Atomy::CodeLoader when-run << [x block-body, false]
  'nil

macro(evaluate-when('run, 'compile, &x)):
  x body evaluate
  Atomy::CodeLoader when-run << [x block-body, true]
  'nil

macro(evaluate-when('compile, 'load, 'run, &x)):
