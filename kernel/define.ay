macro(for-macro(&b)):
  `(evaluate-when(compile, load, run):
      module(Atomy::Macro::Helpers):
        ~*(b contents))

macro(let-macro(*ms, &body)):
  macros = ms collect [`(~p = ~b)]:
    Macro new(p line, p, b)

  LetMacro new(line, body caller, macros)
