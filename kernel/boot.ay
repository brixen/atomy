macro(namespace(n: Variable)):
  Atomy::Namespace ensure(n name to-sym)
  `(Atomy::Namespace ensure(#~n))

macro(_LINE): line
macro(_FILE): Atomy::AST::File new(line)

macro(import(name)): `(require-atomy(~name))

"operators define data comparison dynamic control-flow namespaces
data-delta particles hashes patterns precision node block errors
doc pretty concurrency io condition therie repl" split each [k]:
  puts("loading " + k)
  import(File expand-path("../", _FILE) + "/" + k)
