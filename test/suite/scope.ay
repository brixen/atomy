describe("assignment"):
  describe("="):
    it("introduces a new local"):
      a = 0
      a should-be(0)
      { a = 1, a } call should-be(1)
      a should-be(0)

  describe("=!"):
    it("overwrites an existing local"):
      a = 0
      a should-be(0)
      { a =! 1, a } call should-be(1)
      a should-be(1)

    it("introduces a new local if undefined"):
      { a =! 1, a } call should-be(1)
      { a } should-raise(NameError)
